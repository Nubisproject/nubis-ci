{
  "variables": {
    "iam_instance_profile": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "base_ami": "ami-dd4660ed",
    "owner": "{{env `USER`}}",
    "release": null,
    "build": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-us-west-2",
    "iam_instance_profile": "{{user `iam_instance_profile`}}",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-ci v/{{user `release`}}.{{user `build`}} t/{{timestamp}}",
    "ami_description": "Nubis - CI",
    "ami_regions" : [ "us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}.{{user `build`}}",
       "owner": "{{user `owner`}}"
    }
  }
  ],
  "provisioners": [
   {
    "type": "shell",
      "inline" : [
        "sudo apt-get update"
       ]
  },
  {
    "type": "puppet-masterless",
    "manifest_dir": "nubis/puppet",
    "manifest_file": "nubis/puppet/init.pp",
    "execute_command": "{{.FacterVars}} {{if .Sudo}} sudo -E {{end}} puppet apply --verbose --modulepath='/etc/nubis-puppet/' {{if ne .HieraConfigPath \"\"}}--hiera_config='{{.HieraConfigPath}}' {{end}} {{if ne .ManifestDir \"\"}}--manifestdir='{{.ManifestDir}}' {{end}} --detailed-exitcodes {{.ManifestFile}}",
    "facter": {
        "ami_release": "{{user `release`}}",
        "ami_build": "{{user `build`}}"
    }
  },
  {
    "type": "file",
    "source": "nubis/jenkins/deployment.xml",
    "destination": "/tmp/jenkins-deployment-config.xml"
  },
  {
    "type": "file",
    "source": "nubis/jenkins/integration.xml",
    "destination": "/tmp/jenkins-integration-config.xml"
  },
  {
    "type": "file",
    "source": "nubis/jenkins/config.xml",
    "destination": "/tmp/jenkins-config.xml"
  },
  {
    "type": "file",
    "source": "nubis/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml",
    "destination": "/tmp/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml"
  },
  {
    "type": "file",
    "source": "nubis/packer/jenkins-startup.sh",
    "destination": "/tmp/jenkins-startup.sh"
  },   
  {
    "type": "shell",
      "inline": [
	"sudo mv /tmp/jenkins-startup.sh /etc/nubis.d/jenkins",
	"sudo chmod 755 /etc/nubis.d/jenkins",
	"sudo mv /tmp/jenkins-*.xml /etc/nubis.d/",
        "sudo mv /tmp/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml /var/lib/jenkins/",
	"sudo perl -pi -e's[%%IAM_INSTANCE_PROFILE%%][{{user `iam_instance_profile`}}]' /var/lib/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml",
	"sudo chown -R jenkins:jenkins /var/lib/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml"
      ]
  }
  ]
}
