{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "base_ami": "ami-b3e2be83",
    "owner": "{{env `USER`}}",
    "release": null
  },
  "builders": [
  {
    "type": "amazon-ebs",
    "name": "amazon-us-west-2",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "{{user `base_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "mozilla nubis-ci v/{{user `release`}} t/{{timestamp}}",
    "ami_description": "Nubis - CI",
    "ami_regions" : [ "us-east-1" ],
    "tags" : {
       "release": "{{user `release`}}",
       "owner": "{{user `owner`}}"
    }
  }
  ],
  "provisioners": [
  {
      "type": "puppet-masterless",
      "manifest_file": "nubis/packer/puppet.pp",
      "module_paths": [ 
      	"puppet-modules"
      ],
      "facter": {
          "ami_release": "{{user `release`}}"
      }
  },
  {
    "type": "file",
    "source": "nubis/jenkins/job.xml",
    "destination": "/tmp/nubis-ci.xml"
  },
  {
    "type": "file",
    "source": "nubis/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml",
    "destination": "/tmp/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml"
  },  
  {
    "type": "shell",
      "inline": [
        "sudo mkdir -p /var/lib/jenkins/jobs/nubis-ci",
	"sudo mv /tmp/nubis-ci.xml /var/lib/jenkins/jobs/nubis-ci/config.xml",
        "echo $(( {{user `release`}} + 1 )) | sudo tee /var/lib/jenkins/jobs/nubis-ci/nextBuildNumber",
        "sudo mv /tmp/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml /var/lib/jenkins/",
        "sudo perl -pi -e's[%%AWS_ACCESS_KEY%%][{{user `aws_access_key`}}]' /var/lib/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml",
        "sudo perl -pi -e's[%%AWS_SECRET_KEY%%][{{user `aws_secret_key`}}]' /var/lib/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml",
	"sudo chown -R jenkins:jenkins /var/lib/jenkins/jobs/nubis-ci /var/lib/jenkins/biz.neustar.jenkins.plugins.packer.PackerPublisher.xml"
	
      ]
  }
  ]
}
